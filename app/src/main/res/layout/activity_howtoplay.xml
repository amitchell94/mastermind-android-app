<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical">
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:background="@color/guessColor"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="center">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="#1"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"/>
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="#f00"
                    android:clickable="false"/>
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/black"
                    android:clickable="false"/>
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/white"
                    android:clickable="false"/>
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="#ffff00"
                    android:clickable="false"/>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="2dp"
                            android:background="@android:color/black"
                            android:clickable="false"/>
                        <Button
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="2dp"
                            android:background="@android:color/white"
                            android:clickable="false"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="2dp"
                            android:background="@android:color/darker_gray"
                            android:clickable="false"/>
                        <Button
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="2dp"
                            android:background="@android:color/darker_gray"
                            android:clickable="false"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guesses are shown here"
        android:textAlignment="center"
        android:textSize="24dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The 4 smaller squares on the right indicate how many of the colours are correct"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Black squares indicate a correct colour in the correct place"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="White squares indicate a correct colour in an incorrect place"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grey squares indicate a incorrect colour"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="18dp"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Enter a guess below by selecting colours below"
    android:textAlignment="center"
    android:textSize="24dp"
    android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:background="@color/guessingColor">
            <Button
                android:id="@+id/button1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="#f00"
                android:clickable="false"/>
            <Button
                android:id="@+id/button2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/black"
                android:clickable="false"/>
            <Button
                android:id="@+id/button3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                android:clickable="false"/>
            <Button
                android:id="@+id/button4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="#ffff00"
                android:clickable="false"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Guess"
                android:layout_margin="5dp"
                android:clickable="false"
                android:background="@drawable/button_shape"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18dp"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>
